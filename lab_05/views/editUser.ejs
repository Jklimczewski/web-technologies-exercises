<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.2.1/axios.min.js"></script>
  <link href="/css/editUser.css" rel="stylesheet" type="text/css">
</head>
<body>
  <form id="editUserForm">
    <label for="email">
      Email
    </label>
    <input type="email" id="email" name="email"/>
    <label for="login">
      Login
    </label>
    <input type="text" id="login" name="login"/>
    <label for="password">
      Password
    </label>
    <input type="password" id="password" name="password"/>
    <button type="submit">Wy≈õlij</button>
  </form>

  <script>
    const form = document.getElementById('editUserForm')
    
    form.addEventListener('submit', function(event) {
        event.preventDefault();

        const userID = '<%= locals.userId %>';
        const method = '<%= locals.method %>';

        const dataToSend = {}
        const inputs = form.querySelectorAll("input");
        inputs.forEach(el => {
          dataToSend[el.name] = el.value
        })
        if (method == 'put') {
          axios.put(`http://localhost:3000/users/${userID}`, dataToSend)
          .then(_response => {
              window.location.href = `/client/users/${userID}`
          })
          .catch(error => {
              console.error('Error:', error);
          });
        }
        else if (method == 'patch') {
          axios.patch(`http://localhost:3000/users/${userID}`, dataToSend)
          .then(_response => {
              window.location.href = `/client/users/${userID}`
          })
          .catch(error => {
              console.error('Error:', error);
          });
        }
        else {
          console.log("No such method")
        }
        
    });
  </script>

</body>
</html>